<AnchorPane prefHeight="720.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainMenuController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../res/images/background.PNG" />
         </image>
      </ImageView>
      <Label layoutX="150.0" layoutY="120.0" prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: BLACK; -fx-alignment: CENTER;" text="TETRIS" textFill="WHITE">
         <font>
            <Font name="System Bold" size="72.0" />
         </font>
      </Label>
      <Button fx:id="mainStartBtn" layoutX="240.0" layoutY="330.0" mnemonicParsing="false" onAction="#mainStartBtnHandler" prefHeight="30.0" prefWidth="120.0" text="Start" />
      <Button layoutX="240.0" layoutY="390.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="High Scores" />
      <Button fx:id="quitBtn" layoutX="240.0" layoutY="450.0" mnemonicParsing="false" onAction="#quitBtnHandler" prefHeight="30.0" prefWidth="120.0" text="Quit" />
      <ChoiceBox layoutX="225.0" layoutY="240.0" prefHeight="30.0" prefWidth="150.0" />
   </children>
</AnchorPane>

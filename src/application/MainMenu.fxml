<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="600.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainMenuController">
   <children>
      <ImageView fx:id="img" fitHeight="720.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="150.0" layoutY="120.0" prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-alignment: CENTER; -fx-background-radius: 50;" text="TETRIS" textFill="WHITE" textOverrun="CLIP">
         <font>
            <Font name="System Bold" size="72.0" />
         </font>
      </Label>
      <Button fx:id="mainStartBtn" layoutX="240.0" layoutY="330.0" mnemonicParsing="false" onAction="#mainStartBtnHandler" prefHeight="30.0" prefWidth="120.0" styleClass="buttonDefault" text="Start" />
      <Button fx:id="highScoresBtn" layoutX="240.0" layoutY="390.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" styleClass="buttonDefault" text="High Scores" />
      <Button fx:id="quitBtn" layoutX="240.0" layoutY="450.0" mnemonicParsing="false" onAction="#quitBtnHandler" prefHeight="30.0" prefWidth="120.0" styleClass="buttonDefault" text="Quit" />
      <ChoiceBox fx:id="levelSelector" layoutX="225.0" layoutY="240.0" prefHeight="30.0" prefWidth="150.0" />
   </children>
</AnchorPane>
